<mvc:View controllerName="com.sap.ui5demo.controller.App" displayBlock="true"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:l="sap.ui.layout"
  xmlns:mvc="sap.ui.core.mvc">
  <App id="idAppControl">
    <pages>
      <Page title="{i18n>title}">
        <content>
          <l:VerticalLayout>
            <Label text="{i18n>firstName}" class="sapUiTinyMarginTop"></Label>
            <Text text="{/firstName}"></Text>
            <Label text="{i18n>lastName}" class="sapUiTinyMarginTop"></Label>
            <Text text="{/lastName}"></Text>
          </l:VerticalLayout>
        </content>
      </Page>
    </pages>
  </App>
</mvc:View>