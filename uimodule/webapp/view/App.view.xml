<mvc:View controllerName="com.sap.ui5demo.controller.App" displayBlock="true"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:l="sap.ui.layout"
  xmlns:mvc="sap.ui.core.mvc">
  <App id="idAppControl">
    <pages>
      <Page title="{i18n>title}">
        <content>

          <Panel headerText="Northwind OData Service" class="sapUiResponsiveMargin sapUiMediumMarginBottom" width="auto">
            <content>
              <l:VerticalLayout>

                <Label text="OData V4 Industries" class="sapUiMediumMarginBottom"></Label>
                <List items="{odataV4Model>/Industry}" class="sapUiMediumMarginBottom">
                  <StandardListItem title="{odataV4Model>IndustryName}"></StandardListItem>
                </List>

                <Label text="OData V2 Northwind" class="sapUiMediumMarginBottom"></Label>
                <Table items="{northwindModel>/Products}" class="sapUiMediumMarginTop">


                  <columns>
                    <Column>
                      <Text text="ID" />
                    </Column>
                    <Column>
                      <Text text="Product Name" />
                    </Column>
                    <Column>
                      <Text text="Quantity / Unit" />
                    </Column>
                    <Column>
                      <Text text="Unit Price" />
                    </Column>
                    <Column>
                      <Text text="Units in Stock" />
                    </Column>
                    <Column>
                      <Text text="Reorder Level" />
                    </Column>
                  </columns>
                  <items>
                    <ColumnListItem >
                      <cells>

                        <Text text="{northwindModel>ProductID}" />
                        <Text text="{northwindModel>ProductName}" />
                        <Text text="{northwindModel>QuantityPerUnit}" />
                        <Text text="{northwindModel>UnitPrice}" />
                        <Text text="{northwindModel>UnitsInStock}" />
                        <Text text="{northwindModel>ReorderLevel}" />

                      </cells>
                    </ColumnListItem>
                  </items>

                </Table>
              </l:VerticalLayout>
            </content>
          </Panel>

          <Panel headerText="{i18n>myInfo}" class="sapUiResponsiveMargin sapUiMediumMarginBottom" width="auto">

            <content>
              <l:VerticalLayout>
                <Table items="{/}">


                  <columns>
                    <Column>
                      <Text text="First Name" />
                    </Column>
                    <Column>
                      <Text text="Last Name" />
                    </Column>
                    <Column>
                      <Text text="Email" />
                    </Column>
                  </columns>
                  <items>
                    <ColumnListItem type="Active" press=".onItemPress">
                      <cells>

                        <Text text="{firstName}" />
                        <Text text="{lastName}" />
                        <Text text="{email}" />

                      </cells>
                    </ColumnListItem>
                  </items>

                </Table>
              </l:VerticalLayout>
            </content>
          </Panel>

          <Panel id="panelAddress" headerText="My Address" class="sapUiResponsiveMargin sapUiMediumMarginBottom" width="auto">

            <content>
              <l:VerticalLayout>

                <Label text="Street" class="sapUiMediumMarginTop"/>
                <Text text="{address/street}"></Text>
                <Label text="City" class="sapUiTinyMarginTop"/>
                <Text text="{address/city}"></Text>
                <Label text="Zip" class="sapUiTinyMarginTop"/>
                <Text text="{address/zip}"></Text>
                <Label text="Country" class="sapUiTinyMarginTop"/>
                <Text text="{address/country}"></Text>

              </l:VerticalLayout>
            </content>

          </Panel>
        </content>
      </Page>
    </pages>
  </App>
</mvc:View>