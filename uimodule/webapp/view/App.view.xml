<mvc:View controllerName="com.sap.ui5demo.controller.App" displayBlock="true"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:l="sap.ui.layout"
  xmlns:mvc="sap.ui.core.mvc">
  <App id="idAppControl">
    <pages>
      <Page title="{i18n>title}">
        <content>
          <Panel headerText="{i18n>myInfo}" class="sapUiResponsiveMargin" width="auto">

            <content>
              <l:VerticalLayout>
                <Label text="Email" labelFor="emailInput"/>
                <Input id="emailInput" class="sapUiSmallMarginBottom" type="Email" placeholder="Enter email ..." valueStateText="Email must be a valid email address." value="{ path : '/email'}" change="onChange"/>


                <Label text="{i18n>firstName}" class="sapUiMediumMarginTop"></Label>
                <Text text="{/firstName}"></Text>
                <Label text="{i18n>lastName}" class="sapUiTinyMarginTop"></Label>
                <Text text="{/lastName}"></Text>

                <Label text="{i18n>address}" class="sapUiMediumMarginTop"/>
                <Text text="{/address/street}"/>
                <Text text="{/address/city}"/>
                <Text text="{/address/zip}"/>
                <Text text="{/address/country}"/>

                <Label text="{i18n>hobbies}" class="sapUiMediumMarginTop"/>
                <List items="{path: '/hobbies', factory: '.factory.hobbyFactory'}">
										<dependents>
											<core:Fragment fragmentName="com.sap.ui5demo.fragments.Amateur" type="XML"/>
											<core:Fragment fragmentName="com.sap.ui5demo.fragments.Professional" type="XML"/>
										</dependents>
									</List>
              </l:VerticalLayout>
            </content>

          </Panel>
        </content>
      </Page>
    </pages>
  </App>
</mvc:View>